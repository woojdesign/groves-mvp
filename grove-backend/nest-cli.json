{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "dev/seed-data/*.json",
        "outDir": "dist/src"
      },
      {
        "include": "email/templates/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "dev/meta-personas/*.json",
        "outDir": "dist/src"
      }
    ]
  }
}
